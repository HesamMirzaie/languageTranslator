{
  "name": "automated-text-translator",
  "version": "1.0.0",
  "description": "A small automated text translator (builds from src/script.ts)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "publish": "npm publish --access public",
    "start": "node dist/index.js"
  },
  "keywords": [
    "translator",
    "text",
    "i18n"
  ],
  "author": "HesamMirzaee",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
